html, body
	width 100%
	height 100%
	margin 0
	padding 0
	background-color #111111

#main
	height 100%
	overflow hidden

#game
	margin-left auto
	margin-right auto
	width 95%
	background linear-gradient(to bottom right, #f26, #f62)
	box-shadow 0px 0px 5px 6px #ff888844
	// height, border-radius set by Game#resize

#game table
	border-collapse collapse

#game td
	padding 0
	margin 0

#hud
	height 40px
	width 100%
	margin-bottom -18px

	td
		width 20%

	#scoreTd
		color cyan
	#timeTd
		color yellow

	.word
		font-family 'Oleo Script'
		font-size 150%
		margin-right 5%

	.num
		font-family fantasy
		font-weight bold
		font-size 175%
		text-shadow 0 0 0.1em #fff8

	#mute
		width 100%
		text-align center
		margin-top -0.3em

		font-size 200%
		color greenyellow

	#help, #hint
		border none
		outline none
		background none
		// background linear-gradient(to bottom right, #ffd8, #dff8)
		float right
		position relative
		bottom 5px
		border-radius 10px

		font-family cursive
		font-size 150%
		font-weight bold
		font-family 'Oleo Script'
	#mute:hover, #help:hover, #hint:hover
		cursor pointer
		color red
	#help
		color #88f
	#hint
		color #f8f

#about
	font-family 'PT Sans'

	margin-left auto
	margin-right auto
	margin-top 10px
	background-color #444444
	width 75%
	color white

	padding-left 5%
	padding-right 5%
	padding-top 1%
	padding-bottom 1%
	border-radius 25px

	table
		padding-top 10px
		margin-left auto
		margin-right auto
		width 50%

	.attr
		font-family Oswald

	.set
		font-weight bold
		font-family monospace
		font-size 125%
		margin-right 5px

	#made-in-mason
		text-align center

		a
			text-decoration none
			font-weight bold

		#ms-logo
			width 1.5em
			height 1.5em