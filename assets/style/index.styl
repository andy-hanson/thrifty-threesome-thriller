html, body
	width 100%
	height 100%
	margin 0
	padding 0
	background-color black

#main
	height 100%

#game
	margin-left auto
	margin-right auto
	width 95%
	background linear-gradient(to bottom right, #ff2266, #ff6622)
	box-shadow 0px 0px 5px 6px #ff888844
	// height, border-radius set by CardTable#resize

table
	border-collapse collapse

td
	padding 0
	margin 0

#hud
	padding-top 18px
	height 40px
	width 100%

#hud td
	width 33.3%

#scoreTd
	color cyan
#timeTd
	color yellow

.word
	font-family 'Oleo Script'
	font-size 150%
	margin-right 5%

.num
	font-family fantasy
	font-weight bold
	font-size 175%
	text-shadow 0 0 0.1em #fff

#hint
	float right
	position relative
	bottom 5px
	border-radius 10px

	color magenta
	font-family cursive
	font-size 150%
	font-weight bold

#hint:hover
	color red

#about
	margin-left auto
	margin-right auto
	margin-top 10px
	background-color #444444
	width 75%
	color white

	padding-left 5%
	padding-right 5%
	padding-top 1%
	padding-bottom 1%
	border-radius 25px
